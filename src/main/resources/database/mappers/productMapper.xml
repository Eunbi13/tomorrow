<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="com.tmh.t1.product.ProductMapper">
    	
    
    	<select id="getBrandNum" parameterType="java.lang.String" resultType="java.lang.Long">
    		SELECT brandNum FROM brand WHERE username=#{username}
    	</select>
    
    	<insert id="setProduct" parameterType="ProductVO" useGeneratedKeys="true" keyProperty="produtNum">
			INSERT INTO product (brandNum, productPic, title, contents, productName, categoryNum, productPrice, discount, shippingFee) 
			VALUES (#{brandNum},#{productPic},#{title},#{contents},
					#{productName},#{categoryNum},#{productPrice},#{discount},#{shippingFee})
    	</insert>
    	<insert id="setImages" parameterType="ProductImagesVO">
			INSERT INTO productImage (productNum, fileName) VALUES (#{productNum}, #{fileName})
		</insert>
    
    	<select id="getList" parameterType="ProductVO" resultType="ProductVO">
    		select * from product
    	</select>
    
    	<select id="getSelect" parameterType="ProductVO" resultType="ProductVO">
    		select * from product where productNum=#{productNum}
    	</select>
    
    
    </mapper>